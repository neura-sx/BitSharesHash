<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import sx.neura.btsx.gui.view.components.*?>
<?import sx.neura.btsx.gui.view.components.flow.*?>
<?import sx.neura.btsx.gui.view.components.packer.*?>
<?import sx.neura.btsx.gui.view.pages.bts.comp.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" visible="false">
	<children>
		<TabPane side="TOP" tabClosingPolicy="UNAVAILABLE" tabMinWidth="100.0"
			AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="70.0"
			AnchorPane.topAnchor="5.0" AnchorPane.bottomAnchor="5.0">
			<tabs>
				<Tab text="Basic">
					<content>
						<HBox spacing="10.0">
							<padding>
		                    	<Insets left="10.0" right="10.0" top="10.0" bottom="10.0"/>
		                    </padding>
							<children>
								<VBox prefWidth="250" maxWidth="300" spacing="10.0">
									<children>
										<PackerText fx:id="transactionIdUI" label="Trxn Id"/>
										<PackerHyperlink fx:id="fromAccountUI" label="From Account"/>
										<PackerAmount fx:id="amountUI" label="Amount"/>
										<PackerText fx:id="memoUI" label="Memo"/>
									</children>
								</VBox>
								<VBox prefWidth="250" maxWidth="300" spacing="10.0">
									<children>
										<PackerText fx:id="timestampUI" label="Timestamp"/>
										<PackerHyperlink fx:id="toAccountUI" label="To Account"/>
										<PackerAmount fx:id="feeAmountUI" label="Fee Amount"/>
									</children>
								</VBox>
							</children>
						</HBox>
					</content>
				</Tab>
				<Tab text="Balance">
					<content>
						<HBox spacing="10.0">
							<padding>
		                    	<Insets left="10.0" right="10.0" top="10.0" bottom="10.0"/>
		                    </padding>
							<children>
								<VBox prefWidth="250" maxWidth="300" spacing="10.0">
									<children>
										<PackerHyperlink fx:id="runningBalance1nameUI" label="Running Balance1 Name"/>
										<PackerAmount fx:id="runningBalance1AmountUI" label="Running Balance1 Amount"/>
									</children>
								</VBox>
								<VBox prefWidth="250" maxWidth="300" spacing="10.0">
									<children>
										<PackerHyperlink fx:id="runningBalance2nameUI" label="Running Balance2 Name"/>
										<PackerAmount fx:id="runningBalance2AmountUI" label="Running Balance2 Amount"/>
									</children>
								</VBox>
							</children>
						</HBox>
					</content>
				</Tab>
				<Tab text="Status">
					<content>
						<HBox spacing="10.0">
							<padding>
		                    	<Insets left="10.0" right="10.0" top="10.0" bottom="10.0"/>
		                    </padding>
							<children>
								<VBox prefWidth="250" maxWidth="300" spacing="10.0">
									<children>
										<PackerText fx:id="isVirtualUI" label="Is Virtual"/>
										<PackerText fx:id="isConfirmedUI" label="Is Confirmed"/>
										<PackerText fx:id="errorUI" label="Error"/>
									</children>
								</VBox>
								<VBox prefWidth="250" maxWidth="300" spacing="10.0">
									<children>
										<PackerText fx:id="isMarketUI" label="Is Market"/>
										<PackerText fx:id="isMarketCancelUI" label="Is Market Cancel"/>
									</children>
								</VBox>
							</children>
						</HBox>
					</content>
				</Tab>
				<Tab text="Blockchain">
					<content>
						<HBox spacing="10.0">
							<padding>
		                    	<Insets left="10.0" right="10.0" top="10.0" bottom="10.0"/>
		                    </padding>
							<children>
								<VBox prefWidth="250" maxWidth="300" spacing="10.0">
									<children>
										<PackerHyperlink fx:id="blockNumberUI" label="Block Number"/>
										<PackerText fx:id="expirationTimestampUI" label="Expiration Timestamp"/>
									</children>
								</VBox>
								<VBox prefWidth="250" maxWidth="300" spacing="10.0">
									<children>
									</children>
								</VBox>
							</children>
						</HBox>
					</content>
				</Tab>
			</tabs>
		</TabPane>
		
		<VBox fx:id="leftWingUI" visible="false" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="5.0" spacing="5.0">
			<children>
				<AnchorPane fx:id="homeUI" styleClass="tabButton">
					<children>
						<ImageView AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="10.0"
							AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0"
							fitWidth="50.0" preserveRatio="true" styleClass="wingMenuImageSC">
							<image>
								<Image url="/styles/images/png/navigation_home.png"/>
							</image>
						</ImageView>
					</children>
				</AnchorPane>
				<AnchorPane fx:id="backUI" styleClass="tabButton">
					<children>
						<ImageView AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="10.0" 
							AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0"  
							fitWidth="50.0" preserveRatio="true" styleClass="wingMenuImageSC">
							<image>
								<Image url="/styles/images/png/navigation_back.png"/>
							</image>
						</ImageView>
					</children>
				</AnchorPane>
			</children>
		</VBox>
		
	</children>
</AnchorPane>
